{
  "name": "magmanotebook",
  "displayName": "MagmaNotebook",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": ["onNotebook:my-notebook","onLanguage:magma","onLanguage:spec"],
  "contributes": {
      "configuration":[ 
        {          
          "title": "Magma Engine Parametres",
          "properties": {
            
                    "magma.path": {
                                              "type": "string",
                                              "default": "C:\\Program Files (x86)\\Magma\\magma.exe",
                                              "description": "Gives the path to installed magma application."
                                              },
                    "magma.serverport": { "type": "integer",
                                          "default": 9001,
                                          "description": "Choose a TCP port for the local server ."
                                          }
                        }     
          }
        ],
      "notebooks": [
          {
              "id": "magma-notebook",
              "type": "magma-notebook",
              "displayName": "Magma Notebook",
              "selector": [
                  {
                      "filenamePattern": "*.magma"
                  }
              ]
          }
      ],
      "languages": [
        {
          "id": "magma",
          "aliases": [
            "Magma",
            "magma"
          ],
          "extensions": [
            ".m",
            ".mag",
            ".magma",
            "..magmarc",
            "..magmarc-dev"
          ],
          "configuration": "./magma-ressources/language-configuration.json"
        }
       
      ],
      "grammars": [
        {
          "language": "magma",
          "scopeName": "source.magma",
          "path": "./magma-ressources/syntaxes/magma.tmLanguage"
        }
        
      ],
      "snippets": [
        {
          "language": "magma",
          "path": "./magma-ressources/snippets/snippets.json"
        }
      ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
